modules = ["python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["cairo", "ffmpeg-full", "freetype", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "pkg-config", "qhull", "tcl", "tk"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ML Training Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "lsm_training"

[[workflows.workflow]]
name = "ML Training Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install numpy pandas tensorflow>=2.10 scikit-learn requests && python main.py train --window-size 8 --batch-size 16 --epochs 10 --embedding-dim 64"

[[workflows.workflow]]
name = "lsm_training"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py train --window-size 5 --batch-size 8 --epochs 3 --embedding-dim 64"

[agent]
expertMode = true
